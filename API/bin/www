#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('jwt-auth-express-mysql:server');
var http = require('http');
var os = require('os');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '8080');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port, '0.0.0.0', function() {
  var localIP = getLocalIPAddress();
  var interfaces = os.networkInterfaces();
  var allIPs = [];
  
  // Collect all IPs for reference
  for (var devName in interfaces) {
    var iface = interfaces[devName];
    for (var i = 0; i < iface.length; i++) {
      var alias = iface[i];
      if (alias.family === 'IPv4' && alias.address !== '127.0.0.1' && !alias.internal) {
        allIPs.push({name: devName, ip: alias.address});
      }
    }
  }
  
  console.log(`Server is running on port ${port} and listening on all interfaces (0.0.0.0).`);
  console.log(`Access the API at: http://localhost:${port}`);
  console.log(`From mobile devices on the same network, try one of these IPs:`);
  console.log(`  Recommended: http://${localIP}:${port}`);
  if (allIPs.length > 1) {
    console.log(`  All available IPs:`);
    allIPs.forEach(function(item) {
      console.log(`    - http://${item.ip}:${port} (${item.name})`);
    });
  }
});
server.on('error', onError);
server.on('listening', onListening);

/**
 * Get the local network IP address (prioritize Wi-Fi/Ethernet over virtual interfaces)
 */
function getLocalIPAddress() {
  var interfaces = os.networkInterfaces();
  var wifiIP = null;
  var otherIPs = [];
  
  for (var devName in interfaces) {
    var iface = interfaces[devName];
    // Skip virtual interfaces (VMware, VirtualBox, etc.)
    if (devName.includes('VirtualBox') || devName.includes('VMware') || 
        devName.includes('TAP') || devName.includes('vEthernet')) {
      continue;
    }
    
    for (var i = 0; i < iface.length; i++) {
      var alias = iface[i];
      // Skip internal (i.e. 127.0.0.1) and non-IPv4 addresses
      if (alias.family === 'IPv4' && alias.address !== '127.0.0.1' && !alias.internal) {
        // Prioritize non-192.168.86.x addresses (usually hotspot)
        if (alias.address.startsWith('192.168.86.')) {
          // This might be a hotspot, store as backup
          if (!wifiIP) {
            wifiIP = alias.address;
          }
        } else {
          // This is likely a real network interface
          wifiIP = alias.address;
          break;
        }
        otherIPs.push({name: devName, ip: alias.address});
      }
    }
  }
  
  // If we found a good IP, return it
  if (wifiIP) {
    return wifiIP;
  }
  
  // Otherwise return the first non-hotspot IP
  if (otherIPs.length > 0) {
    return otherIPs[0].ip;
  }
  
  return 'localhost'; // Fallback if no network interface found
}

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
